<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DesktopApp.Recruitment.RecruitTabView"
             xmlns:r="using:DesktopApp.Recruitment"
             x:DataType="r:RecruitTabViewModel">
  <Design.DataContext>
    <r:DesignRecruitTabViewModel />
  </Design.DataContext>
  <StackPanel Spacing="32">
    <ItemsControl ItemsSource="{Binding Categories}">
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <StackPanel Spacing="16" />
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>
    </ItemsControl>
    <TextBlock Text="Operators" />
    <ItemsControl ItemsSource="{Binding AvailableOperators}" />
  </StackPanel>
</UserControl>
