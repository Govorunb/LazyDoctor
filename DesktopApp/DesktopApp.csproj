<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net8.0-windows</TargetFramework>
        <ApplicationManifest>app.manifest</ApplicationManifest>
        <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>

        <!-- trim runtimes -->
        <RuntimeIdentifier>win-x64</RuntimeIdentifier>
        <ValidateExecutableReferencesMatchSelfContained>false</ValidateExecutableReferencesMatchSelfContained>
        <!-- slimmer builds -->
        <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
        <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
        <UseWindowsForms>true</UseWindowsForms>
        <Authors>Govorunb</Authors>
        <Product>LazyDoctor</Product>
        <Version>0.1.2</Version>
        
        <Company>$(Authors)</Company>
        <AssemblyName>$(Product)</AssemblyName>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
<!--        <DefineConstants>$(DefineConstants);DEBUG_OPENCV</DefineConstants>-->
    </PropertyGroup>

    <ItemGroup>
        <!-- implicitly added by UseWindowsForms -->
        <!-- <FrameworkReference Include="Microsoft.WindowsDesktop.App.WindowsForms" IsImplicitlyDefined="true" /> -->

        <!--
        Remove implicit usings added by Microsoft.NET.Sdk.WindowsDesktop.WindowsForms.props
        (they conflict with Avalonia)
         -->
        <Using Remove="System.Drawing" />
        <Using Remove="System.Windows.Forms" />
    </ItemGroup>

    <ItemGroup>
        <AvaloniaResource Include="Assets\**" />

        <AvaloniaResource Remove="Assets\tessdata\*" />
        <!-- no idea why but this puts everything under Assets\tessdata instead of data\tessdata -->
        <!-- <Content Include="Assets\tessdata\*.*" LinkBase="data/tessdata" CopyToOutputDirectory="PreserveNewest" />-->
        <Content Include="Assets\tessdata\eng.traineddata" TargetPath="data/tessdata/eng.traineddata" CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>

    <ItemGroup Condition="$(DefineConstants.Contains('ENABLE_XAML_HOT_RELOAD'))">
        <PackageReference Include="Avalonia.Markup.Xaml.Loader" />
        <PackageReference Include="HotAvalonia" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="FluentAvaloniaUI" />

        <PackageReference Include="HotAvalonia.Extensions" PrivateAssets="all" /> <!-- compiles itself out in release mode -->
        <PackageReference Include="Avalonia.Diagnostics" Condition="'$(Configuration)' == 'Debug'" />

        <PackageReference Include="Avalonia" />
        <PackageReference Include="Avalonia.Desktop" />
        <PackageReference Include="Avalonia.Themes.Fluent" />
        <PackageReference Include="Avalonia.Fonts.Inter" />
        <PackageReference Include="Avalonia.ReactiveUI" />
        <PackageReference Include="JetBrains.Annotations" />
        <PackageReference Include="Octokit" />
        <PackageReference Include="OpenCvSharp4.Windows" />
        <PackageReference Include="ReactiveMarbles.CacheDatabase.Sqlite3" />
        <PackageReference Include="ReactiveUI" />
        <PackageReference Include="ReactiveUI.Fody" />
        <PackageReference Include="Splat.DependencyInjection.SourceGenerator">
          <PrivateAssets>all</PrivateAssets>
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>
</Project>
